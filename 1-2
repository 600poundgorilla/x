import numpy as np
a = np.array([1.2, 2.4, 3.6, 3.5, 6.7, 1.5, 8.4, 3.1, 9.2]) 
rows = a.shape
print(rows)
xx = a.reshape((9,1))
print(xx)
xx1 = a.reshape((3,3))
print(xx1)
mx1 = xx1.max(axis = 0)
print(mx1)
mx2 = xx1.max(axis = 1)
print(mx2)
mn1 = xx1.min(axis = 0)
print(mn1)
mn2 = xx1.min(axis = 1)
print(mn2)
sm1 = xx1.sum(axis = 0)
print(sm1)
sm2 = xx1.sum(axis = 1)
print(sm2)
